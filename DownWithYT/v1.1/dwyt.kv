#:kivy 2.0.0
#filename: dwyt.kv
#relative_filename:dwyt_app.py

<HomeScreen>:
    size_hint:None,None
    size:600,400
    canvas.before:
        Color:
            rgba:0.4,0.4,0,1
        Rectangle:
            pos:self.pos
            size:self.size
    AnchorLayout:
        id:anch
        size_hint:None,None
        size:root.size
        anchor_x:"center"
        #anchor_y:"bottom"
        BoxLayout:
            orientation:'vertical'
            Label:
                text:"Down with\nYouTube"
                font_size:68
                color:(0,0,0,1)
                halign: "center"
            Image:
                id:image
                source:"down_logo.png"