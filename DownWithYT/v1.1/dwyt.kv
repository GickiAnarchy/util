#:kivy 2.0.0
#size:x:width, y:height

<YLabel@Label>:
    font_size:12
    text_size:self.size


<YT_Widget>:
    padding: 5,5
    spacing: 5
    AnchorLayout:
        size_hint: 0.15, 1.0
        anchor_x:"left"
        Button:
            id:yt_btn
            size_hint: 0.15, 1.0
            background_normal: "images/grn_btn.png"
            background_down: "images/red_btn.png"
            on_press:root.dl_this()
    GridLayout:
        halign:"right"
        rows:2
        size_hint: 0.85, 1.0
        pos_hint:{"x": 0.15}
        BoxLayout:
            size_hint: 0.85, 0.5
            pos_hint:{"x": 0.15}
            YLabel:
                id:yt_title
                halign:"center"
                text:root.title
        BoxLayout:
            size_hint: 0.85, 0.5
            pos_hint:{"x": 0.1}
            YLabel:
                id:yt_author
                text:root.author
            YLabel:
                id:yt_length
                halign:"right"
                text:root.length


<YT_List>:
    viewclass:"YT_Widget"
    data:self.yt_data
    scroll_type: ['bars', 'content']
    orientation: "vertical"
    spacing: 20
    padding:10, 10
    # canvas.before:
    #     Color:
    #         rgba: (1.0,0.4,0.1,1)
    #     Rectangle:
    #         size:self.size
    #         pos:self.pos
    RecycleBoxLayout:
        cols:1
        halign:"center"
        default_size_hint: 1.0, None
        default_size: None, dp(56)
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<MainBox>:
    search_in:search_in
    orientation:"vertical"
    halign:"center"
    size_hint:None,None
    size:350,500
    # canvas.before:
    #     Color:
    #         rgba: (0.2,0.2,0.4,1)
    #     Rectangle:
    #         size:self.size
    #         pos:self.pos
    YT_Header:
        id:header
        size_hint: 1.0, 0.10
    BoxLayout:
        size_hint:None,0.25
        padding: 10,10
        spacing: 10
        size:root.width, self.height
        TextInput:
            id:search_in
            size_hint:(1.0,0.3)
            pos_hint:{"center_x": 0.25, "center_y": 0.5}
            multiline:False
        BoxLayout:
            orientation:"vertical"
            pos_hint:{"x":0.75}
            Button:
                id:butt
                text:"search"
                on_press:root.do_it()
                size_hint:(0.5,0.3)
                pos_hint:{"x":0.75, "center_y": 0.25}
            Button:
                id:exit_btn
                text:"Exit"
                on_press:app.stop()
                size_hint:(0.5,0.3)
                pos_hint:{"x":0.75, "center_y": 0.75}
    YT_List:
        id:yts
        size_hint: 1.0, 0.75