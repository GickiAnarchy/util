#:kivy 2.0.0
#filename: dwyt.kv
#relative_filename:dwyt_app.py

<YT>:
    size_hint:None,None
    size:600,400

    canvas.before:
        Color:
            rgba:0.4, 0, 0.7, 0.8
        Rectangle:
            pos:self.pos
            size:self.size

    BoxLayout:
        size_hint:[1, None]
#        size:root.width, 40
        size_y:30
        top:root.height
        Label:
            text:"Down With YouTube"
            font_size:32
            color:(0.8,0.2,0,0.6)
            size_hint:[None,None]
            
            pos:"x":root.center_x - 10
        Image:
            id:logo
            source:"down_logo.png"
            size_hint:[None,None]
            size:100,100
            
            pos:{"x": root.center_x + 10}