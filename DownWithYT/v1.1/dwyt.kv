#:kivy 2.0.0
#size:x:width, y:height

<YLabel@Label>:
    font_size:12


<YT_Widget>:
    #size_hint:1,1
    AnchorLayout:
        anchor_x:"left"
        size_hint:0.09,1.0
        Button:
            id:yt_btn
            size_hint: 0.09, 1.0
            text:""
            background_normal: "images/grn_btn.png"
            background_down: "images/red_btn.png"
            on_press:root.dl_this()
    GridLayout:
        halign:"right"
        rows:2
        size_hint: 0.91, 1.0
        BoxLayout:
            size_hint: 0.91, 0.5
            YLabel:
                id:yt_title
                text:root.title
        BoxLayout:
            size_hint: 0.91, 0.5
            pos_hint:{"center_x":0.6}
            YLabel:
                id:yt_author
                text:root.author
            YLabel:
                id:yt_length
                text:root.length


<YT_List>:
    viewclass:"YT_Widget"
    data:self.yt_data
    scroll_type: ['bars', 'content']
    orientation: "vertical"
    spacing: 20
    padding:10, 10
    RecycleBoxLayout:
        cols:1
        halign:"center"
        default_size_hint: 0.6, None
        default_size: None, dp(56)
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<MainBox>:
    orientation:"vertical"
    halign:"center"
    size_hint:None,None
    size:350,500
    canvas.before:
        Color:
            rgba: (0.2,0.2,0.4,1)
        Rectangle:
            size:self.size
            pos:self.pos
    BoxLayout:
        size_hint:None,0.25
        padding: 10,10
        spacing: 10
        size:root.width, self.height
        TextInput:
            id:search_in
            size_hint:(1.0,0.25)
            #size:dp(150),dp(30)
            pos_hint:{"center_x": 0.25}
        Button:
            id:butt
            text:"search"
            on_press:root.do_it()
            size_hint:(0.5,0.3)
            pos_hint:{"center_x":0.75}
    YT_List:
        id:yts