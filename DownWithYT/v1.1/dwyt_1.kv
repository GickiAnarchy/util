#:kivy 2.0.0
#filename: dwyt.kv
#relative_filename:dwyt_app.py


<YTList>:
    size_hint:None,None
    size:50,25
    BoxLayout:
        size_hint:1,1
        ScrollView:
            bar_color: [0, 0, 255, 1]
            bar_width: 12
            BoxLayout:
                id:box
                size: (self.parent.width, self.parent.height-1)
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height


<HomeScreen>:
    name:"HomeScreen"
    size_hint:None,None
    size:600,400
    FloatLayout:
        AnchorLayout:
            size_hint:None,None
            size:root.size
            anchor_x:"center"
            BoxLayout:
                orientation:'vertical'
                Label:
                    text:"Down with\nYouTube"
                    font_size:68
                    color:(0,0,0,1)
                    halign: "center"
                    pos_hint:{"top":0.4}
                Image:
                    id:image
                    source:"down_logo.png"


<FileScreen>:
    name:"FileScreen"
    Label:
        pos_hint:{'top':1}
        text:"Save/Load Lists"
        font_size:36



<YTScreenManager>:
    size_hint:None,None
    size:600,400
    pos_hint:{'x':0.5,'y':0.5}
    canvas.before:
        Color:
            rgba:0.4, 0, 0.7, 0.8
        Rectangle:
            pos:self.pos
            size:self.size




















