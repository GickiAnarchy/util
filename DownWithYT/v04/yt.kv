#:kivy 1.0.0
#filename: yt.kv


<YTDD>:
    <YTButton@Button>:
        on_release: root.select(self.text)


<SearchScreen>:
    txt_in:txt_in
    yt_dd:yt_dd

    cols:1
    size_hint:None,None
    size:275,400
    background_color:0,1,0,1

    Label:
        text:"Search YouTube"
        font_size:32
        size_hint:None,None
        size:250,45
        top: root.height - 5
    TextInput:
        id:txt_in
        text:"fatheranarchy"
        size_hint:None,None
        size:250,30
    BoxLayout:
        size_hint:None,None
        size:250,170
        Button:
            id:btndd
            on_parent: yt_dd.dismiss()
            on_release: yt_dd.open(self)
        YTDD:
            id:root.parent.yt_dd
            on_select:btndd.text = f"{args[1]}"
    Button:
        text:"Search"
        size_hint:None,None
        size:250,30
        on_press: root.do_search()